<Window x:Class="WpfSample.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="WaitWindow" Height="192" Width="320" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Text}"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Content="OK" Click="Button_Click" HorizontalAlignment="Center" Width="64" Margin="16" Visibility="{Binding ButtonVisibility}" />
    </Grid>
</Window>
